                    {{/preguntas}}
                </ul>
            </div>
        </div>
        <div>
            <button type="button" class="boton_personalizado"><a href="/crearPregunta/{{examen.folioExamen}}">Agregar pregunta</a></button>
        </div>
        
    </body>
